{
  "name": "jwizard-web",
  "version": "1.0.0",
  "scripts": {
    "dev": "next dev -p 8764",
    "build": "next build",
    "start": "next start",
    "lint:check": "npx eslint src/**/*.{js,cjs,mjs,jsx,ts,tsx}",
    "lint:fix": "npx eslint src/**/*.{js,cjs,mjs,jsx,ts,tsx} --fix",
    "types:check": "npx tsc --noEmit --incremental",
    "format": "npx prettier . --write",
    "husky:add-pre-commit": "npx husky add .husky/pre-commit \"npx --no-install lint-staged\"",
    "husky:add-pre-push": "npx husky add .husky/pre-push \"yarn run types:check\"",
    "configure:husky": "npx husky install && yarn run husky:add-pre-commit && yarn run husky:add-pre-push"
  },
  "private": true,
  "author": {
    "name": "JWizard",
    "email": "info@jwizard.pl",
    "url": "https://jwizard.pl"
  },
  "license": "Apache 2.0",
  "lint-staged": {
    "src/**/*.{js,cjs,mjs,jsx,ts,tsx}": [
      "yarn run lint:fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run types:check"
    }
  },
  "dependencies": {
    "@nextui-org/react": "^2.4.2",
    "@reduxjs/toolkit": "^2.2.6",
    "change-case": "^5.4.4",
    "clsx": "^2.1.1",
    "framer-motion": "^11.3.4",
    "lodash": "^4.17.21",
    "next": "14.2.5",
    "next-intl": "^3.17.1",
    "next-themes": "^0.3.0",
    "ramda": "^0.30.1",
    "react": "^18",
    "react-countup": "^6.5.3",
    "react-dom": "^18",
    "react-icons": "^5.2.1",
    "react-redux": "^9.1.2",
    "usehooks-ts": "^3.1.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/lodash": "^4.17.7",
    "@types/node": "^20",
    "@types/ramda": "^0.30.1",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.4",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "typescript-eslint": "^7.16.1"
  }
}
