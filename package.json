{
  "name": "jwizard-web",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint:check": "npx eslint src/**/*.{js,cjs,mjs,jsx,ts,tsx}",
    "lint:fix": "npx eslint src/**/*.{js,cjs,mjs,jsx,ts,tsx} --fix",
    "types:check": "npx tsc --noEmit",
    "format": "npx prettier . --write",
    "husky:add-pre-commit": "npx husky add .husky/pre-commit \"npx --no-install lint-staged\"",
    "husky:add-pre-push": "npx husky add .husky/pre-push \"yarn run types:check\"",
    "configure:husky": "npx husky install && yarn run husky:add-pre-commit && yarn run husky:add-pre-push"
  },
  "private": true,
  "author": {
    "name": "JWizard",
    "email": "info@jwizard.pl",
    "url": "https://jwizard.pl"
  },
  "license": "Apache 2.0",
  "lint-staged": {
    "src/**/*.{js,cjs,mjs,jsx,ts,tsx}": [
      "yarn run lint:fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run types:check"
    }
  },
  "dependencies": {
    "@floating-ui/react": "^0.26.12",
    "@rbnd/react-dark-mode": "^2.0.1",
    "@reduxjs/toolkit": "^2.2.3",
    "i18next": "^23.11.1",
    "i18next-browser-languagedetector": "^7.2.1",
    "i18next-http-backend": "^2.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.1.0",
    "react-icons": "^5.0.1",
    "react-redux": "^9.1.0",
    "react-responsive": "^10.0.0",
    "react-router": "^6.22.3",
    "react-router-dom": "^6.22.3",
    "styled-components": "^6.1.8",
    "usehooks-ts": "^3.1.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.78",
    "@types/react-dom": "^18.2.25",
    "@types/styled-components": "^5.1.34",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^7.6.0",
    "@vitejs/plugin-react": "^4.2.1",
    "babel-plugin-styled-components": "^2.1.4",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.2.5",
    "typescript": "*",
    "typescript-eslint": "^7.6.0",
    "vite": "^5.2.8"
  }
}
