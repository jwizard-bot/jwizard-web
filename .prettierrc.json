{
  "tabWidth": 2,
  "printWidth": 80,
  "useTabs": false,
  "singleQuote": true,
  "semi": true,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "trailingComma": "es5",
  "bracketSameLine": true,
  "importOrderParserPlugins": [
    "typescript",
    "jsx"
  ],
  "plugins": [
    "@trivago/prettier-plugin-sort-imports"
  ],
  "importOrder": [
    "^(next)$",
    "^(react*)$",
    "^([a-zA-Z].*)$",
    "^@(.*)$",
    "^[./]",
    "^[../]",
    "^@/(-styles)$",
    "^@/(.styles)$"
  ],
  "importOrderSeparation": false,
  "importOrderSortSpecifiers": true
}
